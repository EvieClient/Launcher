{
  "private": true,
  "name": "EvieClient",
  "description": "Launches Evieclient",
  "version": "1.1.1",
  "author": "Tristan Camejo <contact@tristancamejo.com>",
  "main": "app/background.js",
  "scripts": {
    "dev": "nextron",
    "build": "nextron build",
    "gh-publish": "electron-builder -p always",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "pw.evie.EvieLauncher",
    "productName": "Evie Client",
    "directories": {
      "output": "build",
      "buildResources": "resources"
    },
    "files": [
      "app/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "EvieClient",
        "repo": "EvieClient-Releases"
      }
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@mui/material": "^5.4.1",
    "@xmcl/client": "^2.1.2",
    "@xmcl/core": "^2.9.0",
    "@xmcl/installer": "^4.2.0",
    "@xmcl/mod-parser": "^3.2.0",
    "@xmcl/server-info": "^2.0.4",
    "@xmcl/text-component": "^2.1.1",
    "@xmcl/user": "^2.1.7",
    "axios": "^0.25.0",
    "chalk": "4.0.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.5",
    "express": "^4.17.2",
    "firebase": "^9.6.5",
    "minecraft-auth": "^1.0.29",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/archiver": "^5.3.1",
    "@types/express": "^4.17.13",
    "@types/graceful-fs": "^4.1.5",
    "@types/node": "^14.14.31",
    "@types/node-7z": "^2.1.4",
    "@types/react": "^17.0.0",
    "@types/unzip": "^0.1.1",
    "@types/unzipper": "^0.10.5",
    "@types/yauzl": "^2.9.2",
    "autoprefixer": "^10.3.5",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "next": "^11.1.3",
    "nextron": "^7.2.0",
    "postcss": "^8.3.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.18",
    "typescript": "^4.5.5"
